%h1 Support

%table{:border => 1, :width => "100%"}
	%tr{:align => "left"}
		%th Lookup a Number
		%th Verify a Number
		%th Account Lookup
	%tr
		%td
			%span= @environment.clusters.size.to_s + " cluster(s)"
			%ul
				- @environment.clusters.each do |cluster|
					%li
						%a{:href => "/clusters/#{cluster.id}"}= cluster.props["name"]
		%td
		%td
			%form{ :action => "/support/bc_search", :method => "post"}
				Account
				%input{:type => "radio", :name => "account_search_type", :value => "name", :checked => "checked"}
				||| Realm
				%input{:type => "radio", :name => "account_search_type", :value => "realm"}
				||| Phone Number
				%input{:type => "radio", :name => "account_search_type", :value => "number"}
				%br/
				%input{:type => "text", :size => "20", :name => "query"}
				%input{:type => "submit", :value => "Search", :class => "btn"}

	%tr{:align => "left"}
		%th Debug Logs
		%th Trace a Call
		%th
			Set Nagios Downtime or 
			%a{:href => "/nagios_info"} List Downtime Requests
	%tr
		%td
		%td
		%td
			%form{ :action => "/nagios", :method => "post"}
				Hostname: 
				%input{:type => "text", :size => "10", :name => "hostname"}
				Duration (Hours): 
				%input{:type => "text", :size => "10", :name => "duration_hour"}
				Duration (Minutes):
				%input{:type => "text", :size => "10", :name => "duration_minute"}
				Comment: 
				%input{:type => "text", :size => "10", :name => "comment"}
				= partial "forms/nagios"
				%input{:type => "submit", :value => "submit", :class => "btn"}
