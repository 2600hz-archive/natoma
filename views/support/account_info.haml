%h2 Account Info 
%p
  Name: #{@foo["name"]}
  %br/
  Id: #{@foo["id"]}
  %br/
  Realm: #{@foo["realm"]}
  %br/
  Role: #{@foo["role"]}

%h2 Parent Info
%p
- (0..@foo["parentcount"]).each do |i|
  Parent Name: #{@bar["name#{i}"]}
  %br/
  Parent Id: #{@bar["id#{i}"]}
  %br/
  Parent Realm: #{@bar["realm#{i}"]}
  %br/
  Parent Role: #{@bar["role#{i}"]}
  %br/
  %br/

%h2 SugarCRM Info
%p
  Sugar Description: #{@meow["description"]}
  %br/
  Sugar Website: #{@meow["website"]}
  %br/
  Sugar Services: #{@meow["services"]}
  %br/
  %br/
  - (0..@mix["contactcount"]).each do |i|
    Contact: #{@mix["first_name#{i}"]} #{@mix["last_name#{i}"]}
